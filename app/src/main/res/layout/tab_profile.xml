<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_edit"
        app:backgroundTint="@color/colorAccent"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llNoAccountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivSignInUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to Sign In"
            android:textColor="#999"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivEditProfilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_circle_gray"
                android:adjustViewBounds="true"
                android:paddingLeft="60dp"
                android:paddingStart="60dp"
                android:paddingRight="60dp"
                android:paddingEnd="60dp"/>

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Name"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/tvProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Phone"
                android:inputType="phone"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Email"
                android:inputType="textEmailAddress"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/tvProfileProgramme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Programme"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/tvProfileGuardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next of Kin"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/tvProfileGuardPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next of Kin's Phone"
                android:inputType="phone"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#777"/>

            <TextView
                android:id="@+id/myBeautifyingSpace"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>